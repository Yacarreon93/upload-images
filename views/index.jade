html
head
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title = Upload Images
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", crossorigin="anonymous")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
body
    div(class="container")
        div(class="row")
            div(class="col-md-6 col-md-offset-3")
                h2(class="text-center") Upload Image
                form(action="", method="POST", enctype="multipart/form-data")
                    div(class="form-group")
                        label(for="title") Image title
                        input(type="text", class="form-control", id="title", name="title", placeholder="Image title")
                    div(class="form-group")
                        label(for="description") Description
                        input(type="text", class="form-control", id="description", name="description", placeholder="Description")
                    div(class="form-group")
                        label(for="image") Image
                        input(type="file", class="form-control", id="image", name="image", placeholder="Image")
                    div(class="form-group")
                    button(type="submit" class="btn btn-default") Upload
        br
        div(class="row")
            div(class="col-md-6 col-md-offset-3")
                h2(class="text-center") Images on Server
                table(class="table table-bordered")
                    tr
                        th Id 
                        th Title
                        th Description
                        th(class="text-center") #
                    each image in images 
                        tr
                            td #{image._id}
                            td #{image.title}
                            td #{image.description}
                            td(class="text-center") 
                                a(href="image/#{image._id}")
                                    i(class="fa fa-download")